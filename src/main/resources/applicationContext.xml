<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="byName">

    <bean class="org.simplericity.datadirlocator.spring.DataDirectoryPropertyReplacer">
        <property name="dataDirectoryLocator">
            <bean class="org.simplericity.datadirlocator.DefaultDataDirectoryLocator">
                <property name="defaultDir" value="$HOME/marbstorage"/>
                <property name="envVarName" value="MARBDATADIR"/>
                <property name="jndiName" value="marbDataDir"/>
                <property name="systemProperty" value="marbDataDir"/>
            </bean>
        </property>
    </bean>

    <bean id="propertyReplacer" class="no.dusken.common.plugin.spring.PropertyReplacer">
        <property name="filename" value="marb.conf"/>
    </bean>

    <bean id="contextSource" class="org.springframework.ldap.core.support.LdapContextSource">
        <property name="base" value="dc=underdusken,dc=no" />
        <property name="userDn" value="${userDn}" />
        <property name="password" value="${password}" />
        <property name="url" value="${urls}" />
    </bean>

    <bean id="ldapTemplate" class="org.springframework.ldap.core.LdapTemplate">
        <constructor-arg ref="contextSource" />
    </bean>

    <bean id="personService" class="no.dusken.common.service.impl.PersonServiceLdapImpl">
        <property name="base" value="dc=underdusken,dc=no" />
        <property name="url" value="${urls}" />
        <property name="userName" value="${userDn}" />
        <property name="password" value="${password}" />
    </bean>

    <bean id="roleService" class="no.dusken.common.service.impl.RoleServiceLdapImpl">
        <property name="base" value="dc=underdusken,dc=no" />
        <property name="url" value="${urls}" />
        <property name="userName" value="${userDn}" />
        <property name="password" value="${password}" />
    </bean>
</beans>